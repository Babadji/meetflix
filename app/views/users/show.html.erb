<div class="row">
  <div class="col-img">Image</div>

  <div class="col-form">
      <div class="user-image">
        <%= cl_image_path curent_user.photo.key%>
      </div>
      <h1><%= "Hello " %><span class="underline"><%= "#{@user.nickname}!" %></span><%= " Welcome to your profile ðŸ˜Ž" %></h1>

    <!--   EDIT YOUR PERSONAL INFO -->

      <%= link_to "Edit your profile", "#", class: "btn btn-ghost" %>

      <div>

      </div>
      <br>
      <br>
      <h2>Create a new star</h2>

      <div>
        <%= render 'stars/form' %>
      </div>
  </div>



  <!--   2eme segment -->

    <div class="col-last-post" style="background-color:#56adf3;">
      <!--    VIEW YOUR LAST POST -->

      <div>
        <h2>Your last post</h2>
      </div>

      <div class="border">
        <div class="container-orders border">
          <% @post_stars.each do |star| %>
            <div>
              <div class="card-product container-orders">
                <%= cl_image_tag star.photo.key%>
                <div class="card-product-infos">
                  <p><strong>Your date :</strong></p>
                  <p><%= star.name %></p>
                  <% if policy(star).edit? %>
                  <%= link_to 'Edit', edit_user_star_path(star) %>
                  <% end %>
                  <% if policy(star).destroy? %>
                  <%= link_to 'Destroy', star, method: :delete, data: { confirm: "Are you sure you want to delete your star?"} %>
                  <% end %>
                </div>
                <br>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>


    <div class="col-last-order" style="background-color:#fbdf53;">
      <!--    VIEW YOUR LAST RESERVATIONS -->

      <div>
        <h2>Your last orders</h2>
      </div>

      <div class="containerzz">
        <% @reservations.each do |reservation| %>
          <div>
            <div class="card-product container-orders">
              <%= cl_image_tag reservation.star.photo.key%>
              <div class="card-product-infos">
                <h2>You lived a greatfull experience with <%= reservation.star.name %></h2>
                <p>from <%= reservation.start.strftime(" %m/%d/%y") %> to <%= reservation.end.strftime(" %m/%d/%y") %>, we hope you <strong>enjoyed</strong> it!</p>
              </div>
              <br>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
